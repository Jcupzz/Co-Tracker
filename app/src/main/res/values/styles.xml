<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card" parent="Widget.MaterialComponents.CardView">
    <item name="cardCornerRadius">30dp</item>
    <item name="cardBackgroundColor">#ffffff</item>
    </style>

    <style name="qr_card_view" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardBackgroundColor">#ffffff</item>
    </style>

    <style name="qr_text_view_desc" parent="Widget.AppCompat.TextView">
        <item name="android:paddingLeft">20dp</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="qr_shop_tv" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="qr_et" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="background">@drawable/editext</item>

    </style>

</resources>