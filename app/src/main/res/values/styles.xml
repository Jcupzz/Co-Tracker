<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="card" parent="Widget.MaterialComponents.CardView">
    <item name="cardCornerRadius">30dp</item>
    <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="qr_card_view" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="cardElevation">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="qr_text_view_desc" parent="Widget.AppCompat.TextView">
        <item name="android:paddingLeft">20dp</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="qr_shop_tv" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:background">@color/tv_background</item>
        <item name="fontFamily">@font/opensans</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="qr_et" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/editext</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textColorHint">@color/color_hint</item>
    </style>

    <style name="btn_style" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/color_btn</item>
        <item name="android:background">@drawable/button_background_green</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/opensans</item>
    </style>


</resources>